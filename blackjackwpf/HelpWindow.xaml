<Window x:Class="MyFirstApp.HelpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyFirstApp"
        mc:Ignorable="d"
        Title="Calculator Help" Height="200" Width="400"
                    Foreground="Black"
            Background="Green">
    <Grid >
        <TextBlock 
            HorizontalAlignment="Left" 
            Margin="10,10,0,0" 
            TextWrapping="Wrap" 
            Text="Look at the current value you have and decide whether you want another card (hit) or whether you don't (stand) based on that value. Your goals is to get to 21 without surpassing that number. Click on the exit button to quit the game." 
            VerticalAlignment="Top"/>
        <Button 
            Name="OKButton"
            Content="OK" 
            HorizontalAlignment="Left" 
            Margin="10,135,0,0" 
            VerticalAlignment="Top" 
            Width="75" Click="OKButton_Click"/>
    </Grid>
</Window>
